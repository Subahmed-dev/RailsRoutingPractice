<h1>Products</h1>

<% @products.each do |product|%>
  <h2> <%= product.name%>  </h2>
  <p><%= product.description%></p>
  <p>
    <strong>The price is:  </strong>
    <%=number_to_currency(product.price) %>
  </p>
  <p>   
    <%= link_to 'Details', product_path(id: product.id)%>

    <%= link_to 'Details', product_path%> 
    <!-- this will also work -->

  </p>



<%end%>



